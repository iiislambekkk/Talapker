@page
@model Talapker.Web.Areas.Identity.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="min-h-screen bg-background flex items-center justify-center px-4 py-8">
    <div class="w-full max-w-md">
        <!-- Success Icon -->
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-foreground mb-2">Password Reset</h1>
            <p class="text-muted-foreground">Your password has been successfully reset.</p>
        </div>

        <!-- Confirmation Card -->
        <div class="bg-card border border-border rounded-xl shadow-sm p-6 text-center">
            <p class="text-foreground mb-6">
                Your password has been reset successfully. You can now log in with your new password.
            </p>
            <a asp-page="./Login" 
               class="inline-block bg-primary text-primary-foreground py-2.5 px-6 rounded-lg font-medium hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors">
                Click here to log in
            </a>
        </div>
    </div>
</div>
@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<h3 class="text-2xl font-semibold mb-6">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();

    if (consentFeature?.CanTrack ?? true)
    {
        if (Model.Is2faEnabled)
        {
            @* Recovery code alerts *@
            @if (Model.RecoveryCodesLeft == 0)
            {
                <div class="rounded-md border border-destructive/50 bg-destructive/10 p-4 text-destructive mb-4">
                    <strong class="font-semibold">You have no recovery codes left.</strong>
                    <p>You must <a asp-page="./GenerateRecoveryCodes" class="text-primary underline hover:text-primary/90">generate a new set of recovery codes</a> before you can log in with a recovery code.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="rounded-md border border-destructive/50 bg-destructive/10 p-4 text-destructive mb-4">
                    <strong class="font-semibold">You have 1 recovery code left.</strong>
                    <p>You can <a asp-page="./GenerateRecoveryCodes" class="text-primary underline hover:text-primary/90">generate a new set of recovery codes</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="rounded-md border border-warning/50 bg-warning/10 p-4 text-warning mb-4">
                    <strong class="font-semibold">You have @Model.RecoveryCodesLeft recovery codes left.</strong>
                    <p>You should <a asp-page="./GenerateRecoveryCodes" class="text-primary underline hover:text-primary/90">generate a new set of recovery codes</a>.</p>
                </div>
            }

            <div class="flex flex-wrap gap-3 mb-6">
                @if (Model.IsMachineRemembered)
                {
                    <form method="post" class="inline-block">
                        <button type="submit"
                                class="bg-primary text-primary-foreground py-2 px-4 rounded-md shadow-sm hover:bg-primary/90 transition">
                            Forget this browser
                        </button>
                    </form>
                }

                <a asp-page="./Disable2fa"
                   class="bg-primary text-primary-foreground py-2 px-4 rounded-md shadow-sm hover:bg-primary/90 transition inline-flex items-center">
                    Disable 2FA
                </a>
                <a asp-page="./GenerateRecoveryCodes"
                   class="bg-primary text-primary-foreground py-2 px-4 rounded-md shadow-sm hover:bg-primary/90 transition inline-flex items-center">
                    Reset recovery codes
                </a>
            </div>
        }

        <h4 class="text-xl font-semibold mb-3">Authenticator app</h4>

        <div class="flex flex-wrap gap-3">
            @if (!Model.HasAuthenticator)
            {
                <a id="enable-authenticator" asp-page="./EnableAuthenticator"
                   class="bg-primary text-primary-foreground py-2 px-4 rounded-md shadow-sm hover:bg-primary/90 transition inline-flex items-center">
                    Add authenticator app
                </a>
            }
            else
            {
                <a id="enable-authenticator" asp-page="./EnableAuthenticator"
                   class="bg-primary text-primary-foreground py-2 px-4 rounded-md shadow-sm hover:bg-primary/90 transition inline-flex items-center">
                    Set up authenticator app
                </a>
                <a id="reset-authenticator" asp-page="./ResetAuthenticator"
                   class="bg-primary text-primary-foreground py-2 px-4 rounded-md shadow-sm hover:bg-primary/90 transition inline-flex items-center">
                    Reset authenticator app
                </a>
            }
        </div>
    }
    else
    {
        <div class="rounded-md border border-destructive/50 bg-destructive/10 p-4 text-destructive mb-4">
            <strong class="font-semibold">Privacy and cookie policy have not been accepted.</strong>
            <p>You must accept the policy before you can enable two-factor authentication.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

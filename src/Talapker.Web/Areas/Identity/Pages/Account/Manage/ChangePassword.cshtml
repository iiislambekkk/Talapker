@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-2xl font-semibold mb-6">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="md:col-span-1">
        <form id="change-password-form" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-destructive" role="alert"></div>

            <!-- Old Password -->
            <div class="relative">
                <input asp-for="Input.OldPassword"
                       class="peer w-full rounded-md border border-border bg-card px-3 pt-5 pb-2 text-card-foreground placeholder-transparent focus:ring-2 focus:ring-primary focus:outline-none"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Please enter your old password." />
                <label asp-for="Input.OldPassword"
                       class="absolute left-3 top-2 text-muted-foreground text-sm transition-all peer-placeholder-shown:top-5 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-sm peer-focus:text-primary"></label>
                <span asp-validation-for="Input.OldPassword" class="text-destructive text-sm"></span>
            </div>

            <!-- New Password -->
            <div class="relative">
                <input asp-for="Input.NewPassword"
                       class="peer w-full rounded-md border border-border bg-card px-3 pt-5 pb-2 text-card-foreground placeholder-transparent focus:ring-2 focus:ring-primary focus:outline-none"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please enter your new password." />
                <label asp-for="Input.NewPassword"
                       class="absolute left-3 top-2 text-muted-foreground text-sm transition-all peer-placeholder-shown:top-5 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-sm peer-focus:text-primary"></label>
                <span asp-validation-for="Input.NewPassword" class="text-destructive text-sm"></span>
            </div>

            <!-- Confirm Password -->
            <div class="relative">
                <input asp-for="Input.ConfirmPassword"
                       class="peer w-full rounded-md border border-border bg-card px-3 pt-5 pb-2 text-card-foreground placeholder-transparent focus:ring-2 focus:ring-primary focus:outline-none"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please confirm your new password." />
                <label asp-for="Input.ConfirmPassword"
                       class="absolute left-3 top-2 text-muted-foreground text-sm transition-all peer-placeholder-shown:top-5 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-sm peer-focus:text-primary"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-destructive text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full py-3 px-4 bg-primary text-primary-foreground font-semibold rounded-md shadow-sm hover:bg-primary/90 transition duration-200">
                Update password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

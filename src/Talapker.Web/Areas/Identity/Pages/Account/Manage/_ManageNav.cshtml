@using Microsoft.Extensions.Localization
@using Talapker.Infrastructure
@using Talapker.Infrastructure.Data
@using Talapker.Infrastructure.Data.UserAccess
@inject SignInManager<ApplicationUser> SignInManager
@inject IStringLocalizer<SharedResource> Localizer;

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="w-full">
    <!-- Header -->
    <div class="mb-6">
        <h3 class="text-lg font-semibold text-foreground">@Localizer["Settings"]</h3>
        <div class="h-px bg-border/50 mt-3"></div>
    </div>

    <!-- Navigation Links -->
    <nav class="flex flex-col gap-1">
        <a asp-page="./Index"
           class="group flex items-center gap-3 px-4 py-3 rounded-xl text-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-primary text-primary-foreground shadow-sm" : "")">
            <div class="w-6 h-6 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
            </div>
            <span class="font-medium">@Localizer["Profile"]</span>
        </a>

        <a asp-page="./Email"
           class="group flex items-center gap-3 px-4 py-3 rounded-xl text-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-primary text-primary-foreground shadow-sm" : "")">
            <div class="w-6 h-6 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
            </div>
            <span class="font-medium">@Localizer["Email"]</span>
        </a>

        <a asp-page="./ChangePassword"
           class="group flex items-center gap-3 px-4 py-3 rounded-xl text-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-primary text-primary-foreground shadow-sm" : "")">
            <div class="w-6 h-6 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
            </div>
            <span class="font-medium">@Localizer["Password"]</span>
        </a>

        @if (hasExternalLogins)
        {
            <a asp-page="./ExternalLogins"
               class="group flex items-center gap-3 px-4 py-3 rounded-xl text-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-primary text-primary-foreground shadow-sm" : "")">
                <div class="w-6 h-6 flex items-center justify-center">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                </div>
                <span class="font-medium">@Localizer["ExternalLogins"]</span>
            </a>
        }

        <a asp-page="./TwoFactorAuthentication"
           class="group flex items-center gap-3 px-4 py-3 rounded-xl text-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-primary text-primary-foreground shadow-sm" : "")">
            <div class="w-6 h-6 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
            </div>
            <span class="font-medium">@Localizer["TwoFactorAuthentication"]</span>
        </a>

        <a asp-page="./PersonalData"
           class="group flex items-center gap-3 px-4 py-3 rounded-xl text-foreground hover:bg-accent hover:text-accent-foreground transition-all duration-200 @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-primary text-primary-foreground shadow-sm" : "")">
            <div class="w-6 h-6 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
            </div>
            <span class="font-medium">@Localizer["PersonalData"]</span>
        </a>
    </nav>
</div>
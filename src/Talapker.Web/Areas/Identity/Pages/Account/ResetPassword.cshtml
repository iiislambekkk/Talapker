@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="min-h-screen bg-background flex items-center justify-center px-4 py-8">
    <div class="w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-foreground mb-2">Reset Password</h1>
            <p class="text-muted-foreground">Create a new password for your account</p>
        </div>

        <!-- Card -->
        <div class="bg-card border border-border rounded-xl shadow-sm p-6">
            <form method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="text-destructive text-sm bg-destructive/10 p-3 rounded-lg" role="alert"></div>
                
                <input asp-for="Input.Code" type="hidden" />
                
                <!-- Email Field -->
                <div class="space-y-2">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-foreground"></label>
                    <input asp-for="Input.Email" 
                           class="w-full px-3 py-2 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors" 
                           autocomplete="username" 
                           aria-required="true" 
                           placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="block text-destructive text-sm"></span>
                </div>

                <!-- Password Field -->
                <div class="space-y-2">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-foreground"></label>
                    <input asp-for="Input.Password" 
                           type="password"
                           class="w-full px-3 py-2 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors" 
                           autocomplete="new-password" 
                           aria-required="true" 
                           placeholder="Enter your new password" />
                    <span asp-validation-for="Input.Password" class="block text-destructive text-sm"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="space-y-2">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-foreground"></label>
                    <input asp-for="Input.ConfirmPassword" 
                           type="password"
                           class="w-full px-3 py-2 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors" 
                           autocomplete="new-password" 
                           aria-required="true" 
                           placeholder="Confirm your new password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="block text-destructive text-sm"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" 
                        class="w-full bg-primary text-primary-foreground py-2.5 px-4 rounded-lg font-medium hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 transition-colors">
                    Reset Password
                </button>
            </form>
        </div>

        <!-- Additional Help -->
        <div class="text-center mt-6">
            <p class="text-sm text-muted-foreground">
                Remember your password? 
                <a href="/Identity/Account/Login" class="text-primary hover:text-primary/90 font-medium underline-offset-4 hover:underline transition-colors">
                    Sign in
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}